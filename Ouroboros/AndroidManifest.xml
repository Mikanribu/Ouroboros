<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="epf.domethic.ouroboros"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/uroboroslogoseul"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="epf.domethic.ouroboros.activity.AccueilActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="epf.domethic.ouroboros.activity.RechercheActivity"
            android:label="@string/title_activity_recherche"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="epf.domethic.ouroboros.activity.ListerPatientsFragment"
            android:label="@string/title_activity_lister_patients_fragment" >
        </activity>
        <activity
            android:name="epf.domethic.ouroboros.activity.ConnexionActivity"
            android:label="@string/title_activity_connexion" >
        </activity>
    </application>

</manifest>