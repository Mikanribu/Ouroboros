<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvTitreRadio"
            style="@style/FormTitre"/>
    </RelativeLayout>

    <View
        style="@style/FormLigneSeparation_TitreetSection"   />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/tvTitreCause"
            style="@style/FormTxtVwTitreSection"
            android:text="@string/titre_cause" />

        <View
            style="@style/FormViewSouligneTitre"
            android:layout_below="@+id/tvTitreCause" />

        <TextView
            android:id="@+id/tvRadio"
            style="@style/FormTxtVwSimpleTexte"
            android:layout_alignLeft="@+id/tvTitreCause"
            android:layout_below="@+id/tvTitreCause"
            android:layout_marginTop="30dp"
            android:text="@string/form_radio" />

        <TextView
            android:id="@+id/tvRadioValue"
            style="@style/FormTxtVwSimpleTexte_Value"
            android:layout_alignBottom="@+id/tvRadio"
            android:layout_alignLeft="@+id/tvRadioValue"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tvRadio" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/FormTxtVwSimpleTexte"
            android:layout_alignTop="@+id/tvRadio"
            android:layout_marginLeft="400dp"
            android:text="@string/form_date" />

        <TextView
            android:id="@+id/tvDateValue"
            style="@style/FormTxtVwSimpleTexte_Value"
            android:layout_alignBottom="@+id/tvDate"
            android:layout_marginLeft="550dp" />

        <TextView
            android:id="@+id/tvCause"
            style="@style/FormTxtVwSimpleTexte"
            android:layout_alignLeft="@+id/tvRadio"
            android:layout_below="@+id/tvRadio"
            android:layout_marginTop="16dp"
            android:text="@string/form_cause" />

        <TextView
            android:id="@+id/tvCauseValue"
            style="@style/FormTxtVwSimpleTexte_Value"
            android:layout_alignBottom="@+id/tvCause"
            android:layout_alignLeft="@+id/tvRadioValue" />

        <TextView
            android:id="@+id/tvMedecin"
            style="@style/FormTxtVwSimpleTexte"
            android:layout_alignTop="@+id/tvCause"
            android:layout_marginLeft="400dp"
            android:text="@string/form_medecin" />

        <TextView
            android:id="@+id/tvMedecinValue"
            style="@style/FormTxtVwSimpleTexte_Value"
            android:layout_alignBottom="@+id/tvMedecin"
            android:layout_alignLeft="@+id/tvDateValue" />

        <ImageView
            android:id="@+id/ivRadio"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Affichage radio" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/tvTitreDescription"
            style="@style/FormTxtVwTitreSection"
            android:text="@string/titre_description" />

        <View
            style="@style/FormViewSouligneTitre"
            android:layout_below="@+id/tvTitreDescription" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/FormTxtVwSimpleTexte"
            android:layout_alignLeft="@+id/tvTitreDescription"
            android:layout_below="@+id/tvTitreDescription"
            android:layout_marginTop="30dp"
            android:text="@string/form_description" />

        <TextView
            android:id="@+id/tvDescriptionValue"
            style="@style/FormTxtVwSimpleTexte_Value"
            android:layout_alignLeft="@+id/tvDescription"
            android:layout_below="@+id/tvDescription" />

        <TextView
            android:id="@+id/tvInterpretation"
            style="@style/FormTxtVwSimpleTexte"
            android:layout_alignLeft="@+id/tvDescription"
            android:layout_below="@+id/tvDescriptionValue"
            android:layout_marginTop="50dp"
            android:text="@string/form_interpretation" />

        <TextView
            android:id="@+id/tvInterpretationValue"
            style="@style/FormTxtVwSimpleTexte_Value"
            android:layout_alignLeft="@+id/tvInterpretation"
            android:layout_below="@+id/tvInterpretation" />
    </RelativeLayout>

</LinearLayout>