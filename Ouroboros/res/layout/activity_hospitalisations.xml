<?xml version="1.0" encoding="utf-8"?>
<epf.domethic.ouroboros.widget.AnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/animation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/animation_layout_sidebar"
        android:layout_width="200dip"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:orientation="vertical" >

        <!-- On crée le menu ici -->

        <TextView
            android:id="@+id/NomMedecin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_marginTop="4dp"
            android:padding="0dip"
            android:paddingTop="3dp"
            android:text="Paul Durand - Médecin"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/tvDeconnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:padding="10dip"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/deconnexion"
            android:textColor="@color/White"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/TrouverPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:paddingBottom="2dp"
            android:paddingTop="40dp"
            android:text="@string/trouverPatient"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/bHospitalisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_hospitalisations"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/hospiService"
            android:textColor="@color/White"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/bRecherche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="60dip"
            android:drawableRight="@drawable/menu_action_search"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/recherche"
            android:textColor="@color/White"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/GererVosDossiers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:paddingBottom="2dp"
            android:paddingTop="30dp"
            android:text="@string/gestionDossiers"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/bCreationDossier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_creer_dossier"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/creerDos"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/bAjoutDocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_ajout_doc"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/ajoutDoc"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/bTransfert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_transfert"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/transfert"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/bACodifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_a_codifier"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/aCodifier"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/AutresActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:paddingBottom="2dp"
            android:paddingTop="30dp"
            android:text="@string/autresActions"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/bArchives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_archives"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/archives"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/bMonCompte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_mon_compte"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:text="@string/monCompte"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/white"
            android:paddingTop="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/animation_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:clickable="true"
        android:orientation="horizontal" >

        <fragment
            android:id="@+id/patient_list"
            android:name="epf.domethic.ouroboros.activity.ListerPatientsFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <fragment
            android:id="@+id/patient_detail"
            android:name="epf.domethic.ouroboros.activity.AfficherPatientFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</epf.domethic.ouroboros.widget.AnimationLayout>