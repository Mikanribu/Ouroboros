<?xml version="1.0" encoding="utf-8"?>
<epf.domethic.ouroboros.widget.AnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/animation_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/animation_layout_sidebar"
        android:layout_width="200dip"
        android:layout_height="match_parent"
        android:background="@color/GrisFondMenu"
        android:orientation="vertical" >

        <!-- On crÃ©e le menu ici -->

        <TextView
            android:id="@+id/tvNomMedecin"
            style="@style/MenuWritingUserName" />

        <TextView
            android:id="@+id/tvMedecin"
            style="@style/MenuWritingUserFonction"
            android:text="@string/medecin" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvDeconnexion"
            style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="60dip"
            android:drawableRight="@drawable/bouton_connexion_transparent"
            android:paddingLeft="20dip"
            android:padding="10dip"
            android:text="@string/deconnexion" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvTrouverPatient"
            style="@style/MenuTextViewTitleStyle"
            android:text="@string/trouverPatient" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvHospitalisation"
            style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_hospitalisations"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:text="@string/hospiService" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvRecherche"
            style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="70dip"
            android:drawableRight="@drawable/menu_action_search"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:text="@string/recherche" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvGererVosDossiers"
            style="@style/MenuTextViewTitleStyle"
            android:text="@string/gestionDossiers" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvCreationDossier"
			style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_creer_dossier"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:text="@string/creerDos" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvAjoutDocument"
            style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="30dip"
            android:drawableRight="@drawable/menu_ajout_doc"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:text="@string/ajoutDoc" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvTransfert"
            style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="80dip"
            android:drawableRight="@drawable/menu_transfert"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:text="@string/transfert" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvACodifier"
            style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="80dip"
            android:drawableRight="@drawable/menu_a_codifier"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:text="@string/aCodifier" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvAutresActions"
            style="@style/MenuTextViewTitleStyle"
            android:text="@string/autresActions" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvArchives"
            style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="80dip"
            android:drawableRight="@drawable/menu_archives"
            android:padding="10dp"
            android:paddingLeft="20dip"
            android:text="@string/archives" />

        <View
            style="@style/MenuViewSectionStyle" />

        <TextView
            android:id="@+id/tvMonCompte"
            style="@style/MenuTextViewSectionStyle"
            android:drawablePadding="50dip"
            android:drawableRight="@drawable/menu_mon_compte"
            android:padding="10dp"
            android:text="@string/monCompte" />

        <View
            style="@style/MenuViewSectionStyle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/animation_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:baselineAligned="false"
        android:clickable="true"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/tiers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <FrameLayout
            android:id="@+id/deuxTiers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        
    </LinearLayout>

</epf.domethic.ouroboros.widget.AnimationLayout>