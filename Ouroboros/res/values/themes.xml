<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Style général -->
    <style name="MyAppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Any customizations for your app running on 3.0+ devices here -->
    </style>  
    
    <style name="ThemeHoloDialog" parent="android:Theme.Holo.Dialog">
	</style>
	
	<!-- Style des formulaires -->
	<style name="FormButton">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    
	<style name="FormViewSouligneTitre">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@color/GrisTitreFormulaire</item>
        <item name="android:paddingTop">16dp</item>
    </style>
    
	<style name="FormTitre">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
	<style name="FormLigneSeparation_TitreetSection">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:paddingTop">16dp</item>
    </style>
    
	<style name="FormTxtVwTitreSection">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/GrisTitreFormulaire</item>
	</style>
	
	<style name="FormTxtVwSimpleTexte">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
	</style>
	
	<style name="FormTxtVwSimpleTexte_Value">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	</style>
    
    <!-- Style de la connexion -->
    <style name="ConnexionLayout">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/fond</item>
    </style>
    
    <style name="Style_Bouton_Connexion">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">@dimen/taille_bouton_connexion</item>
        <item name="android:layout_height">@dimen/taille_bouton_connexion</item>
        <item name="android:layout_marginRight">39dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/Black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_btn_breaker_bay</item>
    </style>
    
    <style name="Style_Entree_Connexion">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:height">100dp</item>
        <item name="android:width">250dp</item>
    </style>
    
    <!-- Style du Menu -->
    <style name="MenuWritingUserInfo">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/White</item>
    </style>
    
    <style name="MenuTextViewSectionStyle">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/Black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MenuTextViewTitleStyle">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/GrisTexteTitreMenu</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="MenuViewSectionStyle">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/GrisViewMenu</item>
        <item name="android:paddingTop">16dp</item>
    </style>
    
</resources>
