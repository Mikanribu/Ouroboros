<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MyAppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Any customizations for your app running on 3.0+ devices here -->
    </style>  
    
    <style name="ThemeHoloDialog" parent="android:Theme.Holo.Dialog">
	</style>
    
    <style name="MenuWritingUserInfo">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/White</item>
    </style>
    
    <style name="MenuTextViewSectionStyle">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MenuTextViewTitleStyle">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">#A9A9A9</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="MenuViewSectionStyle">
        <!-- Any customizations for your app running on 4.0+ devices here -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#484848</item>
        <item name="android:paddingTop">16dp</item>
    </style>
    
</resources>
